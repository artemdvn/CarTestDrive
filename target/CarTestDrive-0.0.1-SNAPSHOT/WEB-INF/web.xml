<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation=
            "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Car Test Drive</display-name>
    <servlet>
        <servlet-name>MainFrameServlet</servlet-name>
        <servlet-class>car.web.MainFrameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarFrameServlet</servlet-name>
        <servlet-class>car.web.CarFrameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowroomListServlet</servlet-name>
        <servlet-class>car.web.ShowroomListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowroomFrameServlet</servlet-name>
        <servlet-class>car.web.ShowroomFrameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainFrameServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarFrameServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowroomListServlet</servlet-name>
        <url-pattern>/showrooms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowroomFrameServlet</servlet-name>
        <url-pattern>/edit_showroom</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/CarsDS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
